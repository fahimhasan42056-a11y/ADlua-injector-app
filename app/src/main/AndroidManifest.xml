        <!-- <activity android:name=".SettingsActivity"/> -->
        <!-- <activity android:name=".InjectorActivity"/> -->

        <!-- Services, BroadcastReceiver, ContentProvider যদি থাকে -->
        <!-- উদাহরণ: -->
        <!-- <service android:name=".InjectorService"/> -->
        <!-- <receiver android:name=".BootReceiver"/> -->

    </application>

</manifest>
