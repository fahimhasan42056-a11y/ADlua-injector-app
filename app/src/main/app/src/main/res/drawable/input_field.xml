<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#1E1E1E"/>

    <!-- Rounded Corners -->
    <corners android:radius="12dp"/>

    <!-- Inner Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#555555"/>
</shape>
